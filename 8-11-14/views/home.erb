%html
  %head
    %link{:href=>"//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel=>"stylesheet"}
    %title Count Letters
  %body
    %h1 Count Your Letters Fool
    %br
      .container
        %form{:method => 'POST'}
          %input.form-control{:name => 'counter', :placeholder => 'Input your sentence here!'}

        - if @count
        .container
          %h4.lead= "Your input was : #{@input}"
          %table.table.table-striped.table-condensed.table-hover
            %tbody
              %tr
                %th letter
                - @count.each do |key, value|
                  %td= key
              %tr
                %th count
                - @count.each do |key, value|
                  %td= value
